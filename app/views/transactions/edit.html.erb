<h1>Editing transaction</h1>

<% form_for(@transaction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :type_of_transaction %><br />
    <%= f.text_field :type_of_transaction %>
  </p>
  <p>
    <%= f.label :grand_total %><br />
    <%= f.text_field :grand_total %>
  </p>
  <p>
    <%= f.label :belongs_to %><br />
    <%= f.text_field :belongs_to %>
  </p>
  <p>
    <%= f.label :date_of_transaction %><br />
    <%= f.datetime_select :date_of_transaction %>
  </p>
  <p>
    <%= f.label :transaction_description %><br />
    <%= f.text_area :transaction_description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @transaction %> |
<%= link_to 'Back', transactions_path %>